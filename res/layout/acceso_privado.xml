<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Estilo_Unizar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/bInscribirPrivadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="73dp"
        android:background="#2d6898"
        android:text="@string/title_activity_inscribir_actividades"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/bAccesoPrivadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bInscribirPrivadas"
        android:layout_below="@+id/bInscribirPrivadas"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="73dp"
        android:background="#2d6898"
        android:text="@string/actividades_privadas"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/text_user2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bLogin"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="92dp"
        android:text="@string/zona_privada"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#2d6898"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/text_user"
        android:layout_width="wrap_content"
        android:textColor="#2d6898"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/text_user2"/>

    <Button
        android:id="@+id/Button01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bAccesoPrivadas"
        android:layout_below="@+id/bAccesoPrivadas"
        android:layout_marginTop="26dp"
        android:background="#2d6898"
        android:onClick="lanzarCreditos"
        android:text="@string/creditos"
        android:textColor="#ffffff" />

</RelativeLayout>
