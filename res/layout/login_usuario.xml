<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Estilo_Unizar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_user2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edusuario"
        android:layout_alignLeft="@+id/edusuario"
        android:layout_marginBottom="46dp"
        android:text="@string/entrada_usuario"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edpassword"
        android:layout_alignLeft="@+id/edpassword"
        android:layout_marginBottom="41dp"
        android:text="@string/entrada_pass"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edusuario"
        android:layout_below="@+id/edusuario"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edusuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:ems="10"
        android:inputType="textPersonName" />

	<Button
	    android:id="@+id/bLogin"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/edpassword"
	    android:layout_below="@+id/textView2"
	    android:layout_marginTop="20dp"
	    android:background="#2d6898"
	    android:text="@string/boton_login"
	    android:textColor="#ffffff" />

</RelativeLayout>
